---
import ImageMod from "@/components/ImageMod.astro";
import IconMapper from "@/components/IconMapper.astro";
import { markdownify } from "@/lib/utils/textConverter";

interface Props {
  title: string;
  description?: string;
  image?: string;
  images?: string[];
  icon?: string;
  badges?: string[];
  feature_grid?: { icon: string; label: string }[];
  systemId?: string;
}

const {
  title,
  description,
  image,
  images,
  icon,
  badges,
  feature_grid,
  systemId,
} = Astro.props;

// System-spezifische Daten (identisch mit index.astro)
const systemData: Record<
  string,
  {
    badge: string;
    price: string;
    color: string;
    bgColor: string;
    textColor: string;
    features: Record<string, { label: string; rating: number }>;
    idealFor: string[];
    highlights: string[];
  }
> = {
  chip: {
    badge: "Preis-Leistungs-Sieger",
    price: "ab 579",
    color: "from-emerald-500 to-teal-600",
    bgColor: "bg-emerald-50",
    textColor: "text-emerald-600",
    features: {
      kosten: { label: "Niedrig", rating: 3 },
      bedienung: { label: "Sehr einfach", rating: 3 },
      sicherheit: { label: "Hoch", rating: 2 },
      hygiene: { label: "Mit Kontakt", rating: 1 },
    },
    idealFor: ["Kleinbetriebe", "Handwerk", "Einzelhandel"],
    highlights: [
      "Guenstigste Option",
      "Einfache Bedienung",
      "Schnelle Einrichtung",
    ],
  },
  fingerabdruck: {
    badge: "Sicherheits-Sieger",
    price: "ab 659",
    color: "from-blue-500 to-indigo-600",
    bgColor: "bg-blue-50",
    textColor: "text-blue-600",
    features: {
      kosten: { label: "Mittel", rating: 2 },
      bedienung: { label: "Einfach", rating: 2 },
      sicherheit: { label: "Sehr hoch", rating: 3 },
      hygiene: { label: "Mit Kontakt", rating: 1 },
    },
    idealFor: ["Mittelstand", "Sicherheitsbereiche", "Produktion"],
    highlights: [
      "Biometrische Sicherheit",
      "Kein Chip verlierbar",
      "Manipulationssicher",
    ],
  },
  gesichtserkennung: {
    badge: "Hygiene-Sieger",
    price: "ab 624",
    color: "from-purple-500 to-pink-600",
    bgColor: "bg-purple-50",
    textColor: "text-purple-600",
    features: {
      kosten: { label: "Hoeher", rating: 1 },
      bedienung: { label: "Sehr einfach", rating: 3 },
      sicherheit: { label: "Sehr hoch", rating: 3 },
      hygiene: { label: "Kontaktlos", rating: 3 },
    },
    idealFor: ["Gastronomie", "Gesundheitswesen", "Lebensmittel"],
    highlights: [
      "100% kontaktlos",
      "Schnellste Erfassung",
      "Modernste Technologie",
    ],
  },
};

// Fallback auf chip wenn systemId nicht gefunden
const system = systemData[systemId || "chip"] || systemData.chip;
const displayIcon = icon || "chip";
const productImage = image || (images && images.length > 0 ? images[0] : "");
---

<section class="section relative overflow-hidden pt-[76px] pb-12">
  <div class="container">
    <div class="row items-stretch">
      <!-- Left Column: Product Image with Badge -->
      <div class="col-12 lg:col-6 mb-8 lg:mb-0">
        <div
          class={`relative h-full rounded-3xl overflow-hidden ${system.bgColor} p-8 lg:p-12 flex items-center justify-center`}
          data-aos="fade-right"
          data-aos-delay="100"
        >
          <!-- Badge -->
          <div
            class={`absolute top-4 right-4 px-4 py-1.5 rounded-full text-xs font-bold text-white bg-gradient-to-r ${system.color} z-10 shadow-lg`}
          >
            {system.badge}
          </div>

          <!-- Product Image Container -->
          <div class="flex flex-col items-center">
            <!-- Main Image -->
            <div id="main-product-image" class="mb-4">
              {
                productImage && (
                  <ImageMod
                    src={productImage}
                    width={400}
                    height={400}
                    alt={title}
                    class="object-contain max-h-[350px] w-auto drop-shadow-xl"
                    format="webp"
                  />
                )
              }
            </div>

            <!-- Thumbnails -->
            {images && images.length > 1 && (
              <div class="flex gap-3 justify-center">
                {images.map((img, index) => (
                  <button
                    class={`thumbnail-btn w-16 h-16 rounded-lg overflow-hidden border-2 ${index === 0 ? 'border-primary' : 'border-transparent'} hover:border-primary/50 transition-colors bg-white`}
                    data-image={img}
                    type="button"
                    aria-label={`Produktbild ${index + 1} anzeigen`}
                  >
                    <ImageMod
                      src={img}
                      width={64}
                      height={64}
                      alt={`${title} Ansicht ${index + 1}`}
                      class="object-contain w-full h-full"
                      format="webp"
                    />
                  </button>
                ))}
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Right Column: Content -->
      <div class="col-12 lg:col-6">
        <div
          class="h-full flex flex-col"
          data-aos="fade-left"
          data-aos-delay="200"
        >
          <!-- Header: Icon + Name + Price -->
          <div class="flex items-center gap-4 mb-4">
            <div
              class={`w-14 h-14 rounded-xl ${system.bgColor} flex items-center justify-center shrink-0`}
            >
              <IconMapper
                icon={displayIcon}
                size="1.75rem"
                className={system.textColor}
                ariaLabel={title}
              />
            </div>
            <div>
              <h1
                set:html={markdownify(title)}
                class="text-2xl md:text-3xl lg:text-4xl font-bold mb-1"
              />
              <div class="flex items-baseline gap-2">
                <span class={`text-2xl font-bold ${system.textColor}`}
                  >{system.price}</span
                >
                <span class="text-text-dark text-sm">EUR</span>
              </div>
            </div>
          </div>

          <!-- Short Description -->
          {
            description && (
              <p class="text-lg text-text-dark mb-6">{description}</p>
            )
          }

          <!-- Features with Ratings -->
          <div class="space-y-3 mb-6">
            {
              Object.entries(system.features).map(([key, feature]) => (
                <div class="flex items-center justify-between">
                  <span class="text-sm text-text-dark capitalize">
                    {key === "kosten" ? "Anschaffung" : key}
                  </span>
                  <div class="flex items-center gap-3">
                    <span
                      class={`text-xs font-medium ${feature.rating === 3 ? "text-green-600" : feature.rating === 2 ? "text-yellow-600" : "text-orange-500"}`}
                    >
                      {feature.label}
                    </span>
                    <div class="flex gap-1">
                      {[1, 2, 3].map((dot) => (
                        <div
                          class={`w-2 h-2 rounded-full ${dot <= feature.rating ? `bg-gradient-to-r ${system.color}` : "bg-gray-200"}`}
                        />
                      ))}
                    </div>
                  </div>
                </div>
              ))
            }
          </div>

          <!-- Divider -->
          <div class="border-t border-border/30 my-4"></div>

          <!-- Ideal For Tags -->
          <div class="mb-4">
            <p
              class="text-xs text-text-dark mb-2 uppercase tracking-wider font-medium"
            >
              Ideal fuer
            </p>
            <div class="flex flex-wrap gap-2">
              {
                system.idealFor.map((item) => (
                  <span
                    class={`px-3 py-1 rounded-full text-xs ${system.bgColor} ${system.textColor} font-medium`}
                  >
                    {item}
                  </span>
                ))
              }
            </div>
          </div>

          <!-- Highlights -->
          <div class="mb-6">
            <div class="flex flex-wrap gap-x-6 gap-y-2">
              {
                system.highlights.map((highlight) => (
                  <div class="flex items-center gap-2 text-sm">
                    <IconMapper
                      icon="check"
                      size="0.875rem"
                      className={`${system.textColor} shrink-0`}
                      ariaHidden={true}
                    />
                    <span>{highlight}</span>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4 mt-auto">
            <a
              href="/kontakt"
              class="btn flex-1 flex items-center justify-center gap-2 text-white bg-secondary hover:bg-secondary/90 transition-opacity px-6 py-3 rounded-xl font-semibold shadow-lg"
            >
              Beratung buchen
            </a>
            <a
              href="/preise"
              class="btn flex-1 flex items-center justify-center gap-2 text-white bg-primary hover:bg-primary/90 transition-colors px-6 py-3 rounded-xl font-semibold shadow-lg"
            >
              Preise & Pakete
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Grid Background -->
  <div
    class="absolute bottom-0 left-0 w-full h-full -z-10 bg-repeat bg-size-[1439px] bg-[url('/images/home/grid.svg')] opacity-50"
  >
  </div>
</section>

<script>
  // Thumbnail click handler for product image gallery
  // Using astro:page-load for View Transitions compatibility
  function initThumbnailGallery() {
    const thumbnails = document.querySelectorAll('.thumbnail-btn');
    const mainImageContainer = document.querySelector('#main-product-image');

    if (thumbnails.length > 0 && mainImageContainer) {
      const mainImg = mainImageContainer.querySelector('img');

      thumbnails.forEach(btn => {
        // Remove existing listeners to prevent duplicates
        const newBtn = btn.cloneNode(true);
        btn.parentNode.replaceChild(newBtn, btn);

        newBtn.addEventListener('click', () => {
          const newSrc = newBtn.dataset.image;
          if (mainImg && newSrc) {
            // Update main image src
            mainImg.src = newSrc;
            // Also update srcset if exists
            if (mainImg.srcset) {
              mainImg.srcset = newSrc;
            }
            // Update active state
            document.querySelectorAll('.thumbnail-btn').forEach(b => {
              b.classList.remove('border-primary');
              b.classList.add('border-transparent');
            });
            newBtn.classList.remove('border-transparent');
            newBtn.classList.add('border-primary');
          }
        });
      });
    }
  }

  // Run on initial load and after View Transitions
  document.addEventListener('astro:page-load', initThumbnailGallery);
</script>
