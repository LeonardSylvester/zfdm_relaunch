---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import PageHeader from "@/partials/PageHeader.astro";
import KostenrechnerSection from "@/partials/KostenrechnerSection.astro";

const title = "Kostenrechner: Was kostet manuelle Zeiterfassung?";
const meta_title = "Kostenrechner für Zeiterfassung | ZFDM";
const description = "Berechnen Sie, wie viel Sie durch manuelle Zeiterfassung jeden Monat verlieren. Einfacher Kostenrechner für Personalkosten und Zeitaufwand.";
---

<Base title={title} meta_title={meta_title} description={description}>
  <PageHeader
    title={title}
    content="Berechnen Sie schnell und einfach die versteckten Kosten manueller Zeiterfassung in Ihrem Unternehmen."
  />

  <KostenrechnerSection />

  <CallToAction />
</Base>
